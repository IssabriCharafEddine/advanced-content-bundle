{% trans_default_domain 'AdvancedContentBundle' %}

<div class="acb-field-list-container">
<form action="{{ path('sherlockode_acb_content_field_form') }}" class="acb-add-field-form">
{% for groupName, elements in fields %}
    <h2 class="group-name">{{ groupName|trans }}</h2>
    <ul class="acb-field-list">
        {% for label, field in elements %}
            {% set code = field.code %}
        <li class="acb-field-item">
            <input id="acb-type-{{ code }}" type="radio" name="type" value="{{ code }}"/>
            <label for="acb-type-{{ code }}">
                <i class="{{ field.iconClass }}"></i>
                {{ label|trans }}
            </label>
        </li>
        {% endfor %}
    </ul>
{% endfor %}
</form>
</div>
