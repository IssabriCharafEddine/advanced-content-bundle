{% trans_default_domain 'AdvancedContentBundle' %}

{% form_theme form '@SherlockodeAdvancedContent/Form/content.html.twig' %}

<h1>{{ fieldName|trans }}</h1>

{{ form_start(form, {attr: form.vars.attr|merge({class: form.vars.attr.class|default('') ~ ' acb-edit-field-form'})}) }}
