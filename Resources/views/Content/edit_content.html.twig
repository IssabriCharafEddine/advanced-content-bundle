{% extends is_ajax is defined and is_ajax ? 'SherlockodeAdvancedContentBundle::empty.html.twig' :  'SherlockodeAdvancedContentBundle::layout.html.twig' %}
{% block body %}
    {{ parent() }}
    <div>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-12">
                <h4>Edit Content</h4>
                <div class="form-group">
                    {{ form_label(form.fieldValues) }}
                    {{ form_widget(form.fieldValues) }}
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">
            Update
        </button>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
