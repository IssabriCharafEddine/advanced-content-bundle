{% trans_default_domain 'AdvancedContentBundle' %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Advanced Content Bundle{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"/>
            <link rel="stylesheet" href="{{ asset('bundles/sherlockodeadvancedcontent/css/advanced-content.css') }}"/>
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <div class="navbar-brand">
                    <span class="navbar-brand">Advanced Content Bundle</span>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="{{ path('sherlockode_acb_content_list') }}">{{ 'content.label'|trans }}</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('sherlockode_acb_page_type_list') }}">{{ 'page_type.label'|trans }}</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('sherlockode_acb_page_list') }}">{{ 'page.label'|trans }}</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('sherlockode_acb_tools_index') }}">{{ 'tools.label'|trans }}</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="content">
            {% block body %}
            {% endblock body %}
        </div>
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
