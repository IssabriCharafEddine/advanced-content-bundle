{% trans_default_domain 'AdvancedContentBundle' %}

{% import "@SherlockodeAdvancedContent/Common/Macros/classes.html.twig" as classes %}
{% form_theme form '@SherlockodeAdvancedContent/Form/theme.html.twig' %}

{{ form_start(form) }}
    <table class="{{ classes.table() }}">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'page_type.form.name'|trans }}</th>
            <th>{{ 'actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for pageType in pageTypes %}
            <tr>
                <td>{{ pageType.id }}</td>
                <td>{{ pageType.name }}</td>
                <td>
                    <a href="{{ path('sherlockode_acb_tools_page_type_delete', {id: pageType.id}) }}">{{ 'delete'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td></td>
            <td>
                {{ form_widget(form.name) }}
                {{ form_errors(form) }}
            </td>
            <td>
                <button type="submit" class="{{ classes.buttonSuccess() }}">
                    {{ 'page_type.form.submit'|trans }}
                </button>
            </td>
        </tr>
        </tbody>
    </table>
    {{ form_rest(form) }}
{{ form_end(form) }}
