{% trans_default_domain 'AdvancedContentBundle' %}

{% import "@SherlockodeAdvancedContent/Common/Macros/classes.html.twig" as classes %}
{% form_theme form '@SherlockodeAdvancedContent/Form/theme.html.twig' %}

{{ form_start(form) }}
    <table class="{{ classes.table() }}">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'scope.locale'|trans }}</th>
            <th>{{ 'actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for scope in scopes %}
            <tr>
                <td>{{ scope.id }}</td>
                <td>{{ scope.locale }}</td>
                <td>
                    <a href="{{ path('sherlockode_acb_scope_delete', {id: scope.id}) }}">{{ 'delete'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td></td>
            <td>
                {{ form_widget(form.locale) }}
                {{ form_errors(form) }}
            </td>
            <td>
                <button type="submit" class="btn btn-success">
                    {{ 'scope.add'|trans }}
                </button>
            </td>
        </tr>
        </tbody>
    </table>
    {{ form_rest(form) }}
{{ form_end(form) }}
